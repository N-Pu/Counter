<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="100sp" tools:layout_editor_absoluteY="-46dp" tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints"/>
    <Button
            android:id="@+id/bt"
            android:layout_width="371dp"
            android:layout_height="72dp"
            android:text="click me"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"

            tools:ignore="MissingConstraints" app:layout_constraintStart_toEndOf="@+id/tx"
            app:layout_constraintEnd_toStartOf="@+id/tx"
            app:layout_constraintTop_toBottomOf="@+id/tx" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="341dp" app:layout_constraintVertical_bias="0.213"
            app:backgroundTint="#A11010"/>


</androidx.constraintlayout.widget.ConstraintLayout>